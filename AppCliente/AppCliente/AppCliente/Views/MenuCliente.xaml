        </FlyoutItem>

        <FlyoutItem Title="Histórico" Icon="clockBack.png">
            <ShellContent x:Name="VerHistoricoPedidos"/>
        </FlyoutItem>

        <FlyoutItem Title="Avaliações" Icon="barchart.png">
            <ShellContent x:Name="VerAvaliacoes"/>
        </FlyoutItem>

